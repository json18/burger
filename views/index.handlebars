<div class="row">
  <center>
    <!-- Left side (ready to eat) -->
    <div class="col-md-6">
      <h4 class="red_font"> Burgers To Eat!</h4>
      <div id="ready_to_eat">

        <!--  Insert Ready Burgers Here -->
        {{#each burgers}}
          {{#unless this.devoured}}
            {{burger_name}}
             <form action="/{{id}}" method="POST">
                    <input type="hidden" name="devoured" value="true">
                    <button class="waves-effect waves-light btn red z-depth-3" type="submit">Devour it!</button>
            </form>
          {{/unless}}
        {{/each}}

      </div>
    </div>

    <!-- Right side (already eaten) -->
    <div class="col-md-6">
      <h4 class="red_font">Sorry, you already devoured this!</h4>
      <div id="already_eaten">

        <!--  Insert Eaten Burgers Here -->

        <form action="/create" method="POST">
            <div class="input-group">
                <textarea name = "burger_name"></textarea>
                <span class="input-group-btn">
                  <button class="btn btn-success devour-button" type="submit">Devour It!</button>
                </span>
            </div>
        </form>

      </div>
    </div>

      {{#each burgers}}
          {{#if this.devoured}}
            {{burger_name}}
          {{/if}}
        {{/each}}

  </center>
</div>